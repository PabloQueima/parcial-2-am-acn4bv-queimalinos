<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_general"
    android:background="@color/color_background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTituloEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_titulo"
            android:textColor="@color/color_dark"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/imgEjercicio"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@color/color_light"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtDescripcionEjercicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_general"
            android:textColor="@color/color_dark2" />

    </LinearLayout>

</ScrollView>
